{
  "name": "sos-bridge-agent",
  "version": "1.0.0",
  "description": "SOS-Bridge AI Agent - Tổng đài AI điều phối cứu nạn phi tập trung",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/api-main.js",
    "dev": "tsx src/index.ts",
    "api": "tsx src/api-main.ts",
    "api:dev": "tsx src/index.ts api",
    "api:prod": "node dist/api-main.js",
    "bot": "tsx src/telegram-main.ts",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:seed": "tsx src/database/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "ai-agent",
    "rescue",
    "iqai",
    "adk",
    "disaster-relief"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@iqai/adk": "^0.5.7",
    "chalk": "^4.1.2",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.4",
    "node-telegram-bot-api": "^0.66.0",
    "pg": "^8.13.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/node-telegram-bot-api": "^0.64.0",
    "@types/pg": "^8.11.10",
    "@vitest/coverage-v8": "^2.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.0.0"
  }
}
